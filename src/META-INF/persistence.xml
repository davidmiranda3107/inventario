<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="inventario" transaction-type="RESOURCE_LOCAL">
		<non-jta-data-source>jdbc/santamaria</non-jta-data-source>
		<jar-file>lib/santamaria.jar</jar-file>
		<class>inventario.entities.Contador</class>
		<class>inventario.entities.InvCierre</class>
		<class>inventario.entities.InvCierreDet</class>
		<class>inventario.entities.InvEstado</class>
		<class>inventario.entities.InvGrupo</class>
		<class>inventario.entities.InvInventario</class>
		<class>inventario.entities.InvInventarioDet</class>
		<class>inventario.entities.InvInventarioMov</class>
		<class>inventario.entities.InvMovimientoTracking</class>
		<class>inventario.entities.InvPlanta</class>
		<class>inventario.entities.InvTipoMovimiento</class>
		<properties>
			<property name="eclipselink.jpa.uppercase-column-names" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
